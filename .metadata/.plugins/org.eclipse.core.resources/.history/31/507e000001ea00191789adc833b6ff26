#include <iostream>
#include <fstream>
#include <sstream>

#include "Row.hpp"

using namespace std;

#define NUM_OF_FEATURE 4

vector<Row> readFile(vector<Row> rows);
Row* loadRow(string line);

int main() {
	vector<Row> rows = readFile(rows);
	return 0;
}

vector<Row> readFile(vector<Row*> rows) {
	ifstream file("iris_data.csv", ios::in);
	string line;

	while (getline(file, line)) {
		rows.push_back(loadRow(line));
	}
	//necesary?
	file.close();
}

Row loadRow(string line) {
	vector<double> features;
	string word;
	stringstream s(line);
	string::size_type sz;

	for (int i = 0; i < NUM_OF_FEATURE; i++) {
		getline(s, word, ',');
		features.push_back(stod(word, &sz));
	}
	getline(s, word, ',');

	return new Row(features, word);
}
