#include <string>
#include <vector>

#define SIZE 4

using namespace std;

class Row {
	public:
		vector<double> features;
		string category;
		Row(vector<double> features, string m_category) : 
		features(m_features),category(m_category) {};
		
		void setFeatures(double features[]);
		void setCategory(string category);
	 	double[] getFeatures();
	 	string getCategory();
	 	
	 ~Row() {
	 delete features;
	 }
}
;