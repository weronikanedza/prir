#include <iostream>
#include "Row.hpp"
#include <fstream>
#include <sstream>

using namespace std;

#define NUM_OF_FEATURE 4

void readFile(vector<Row> &rows);
void loadRow(string line);

int main() {
	vector<Row> rows;

	cout << "ss" << endl; // prints ss
	return 0;
}

void readFile(vector<Row> &rows) {
	fstream fileStream;
	fileStream.open("iris_data.csv", ios::in);
	string line;

	while (getline(fileStream, line)) {
		loadRow(line);
	}

	fileStream.close();
}

Row loadRow(string line) {
	vector<double> features;
	string word;
	stringstream stringStream(line);
	string::size_type sz;

	for(int i=0;i<NUM_OF_FEATURE;i++){
		getline(stringStream,word,', ');
		features.push_back(stod(word,&sz));
	}

	getline(stringStream,word,', ');
	rows.

}
